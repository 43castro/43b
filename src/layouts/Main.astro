<style is:global>
:root {
  --background-color-light: rgb(206, 205, 195);
  --text-color-light: rgb(16, 15, 15);
  --background-color-dark: rgb(16, 15, 15);
  --text-color-dark: rgb(206, 205, 195);

}
@font-face {
  font-family: 'Geist';
  src: url('/fonts/Geist-Regular.otf') format('otf');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

body {
  background-color: var(--background-color-light);
  color: var(--text-color-light);
  font-family: Geist-SemiBold;
}

p {
  font-family: Geist-SemiBold;
}

@media (prefers-color-scheme: dark) {
  body {
    background-color: var(--background-color-dark);
    color: var(--text-color-dark);
  }
}

