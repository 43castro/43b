---
import Nav from "../components/Nav.astro";
import TableOfContents from "../components/TableOfContents.astro";
const { frontmatter } = Astro.props;
import Main from "./Main.astro";
---

<html lang="es" class="scroll-smooth">
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
    <Main>
        <main
            class="overflow-hidden px-2 pb-72 pt-20">
            <div
                style="transform: translate(-280px, 175px);"
                class="fixed top-0 px-10">
                <TableOfContents/>
            </div>
            <div class="h-full w-full">
                <div class="flex justify-between">
                    <div>
                        <div class="mb-2 font-medium text-5xl">{frontmatter.title}</div>
                        <div class="mb-10 text-md font-extralight opacity-80">
                            <time datetime={frontmatter.date.toISOString()}
                                >{
                                    frontmatter.date.toLocaleDateString(
                                        undefined,
                                        {
                                            year: "numeric",
                                            month: "long",
                                            timeZone: "CET",
                                        },
                                    )
                                }</time
                            >
                        </div>
                    </div>
                </div>
                <img
                    src={frontmatter.image}
                    alt=""
                    class="mb-6 rounded-lg shadow-lg"
                />
                <main class="prose">
                    <slot />
                </main>
            </div>
        </main>
    </Main>
</html>

<style is:global>

    @font-face {
    font-family: 'Geist';
    src: url('/fonts/Geist-Regular.otf') format('otf');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
    }

    .prose p + p {
        margin-bottom: 35px;
        color: rgb(206, 205, 195);
    }

    .prose p {
        color: rgb(206, 205, 195);
        line-height: 1.5em;
        font-size: 20px;
        letter-spacing: 0.25px;
    }
    .prose h1{
        color: rgb(206, 205, 195);
        font-weight: bold;
        line-height: 3em;
        font-size: 23px;
    }
    .prose h2,
    .prose h3,
    .prose h4,
    .prose h5 {
        color: rgb(206, 205, 195);
        font-weight: bold;
        line-height: 3em;
        font-size: large;
    }

    .prose p,
    .prose strong,
    .prose ol,
    .prose ul {
        color: rgb(206, 205, 195);
    }

    .prose a {
        font-weight: regular;
        text-decoration: underline;
    }

    .prose a:hover{
        color: rgb(67, 133, 190);
    }
    .prose img {
        border-radius: 0.5rem;
    }

    .prose code,
    .prose pre {
        color: grey;
    }

    .astro-code {
        color: orange;
    }

    ::-webkit-scrollbar {
        width: 0.75em;
    }

    ::-webkit-scrollbar-track {
        background: #262626;
    }

    ::-webkit-scrollbar-thumb {
        background: #525252;
        border-radius: 10vh;
    }
</style>
