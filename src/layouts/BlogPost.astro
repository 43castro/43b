---
const { frontmatter } = Astro.props;
import Main from "./Main.astro";
import "../styles/global.css";
---

<html lang="es" class="scroll-smooth">
    <base target="_blank">
    <Main title={frontmatter.title} description={frontmatter.description}>
        <main class="pb-54 pt-20">
            <div class="h-full w-full">
                <div class="flex">
                    <div class="">
                        <div class="font-bold text-4xl">{frontmatter.title}</div>
                        <div class="mb-6 font-extralight opacity-80">
                            <time class="opacity-75" datetime={frontmatter.pubDate.toISOString()}>
                                {`${frontmatter.pubDate.getFullYear()} Â· ${frontmatter.pubDate.getMonth() + 1}`}
                            </time>
                        </div>
                    </div>
                </div>
                <img src={frontmatter.image} alt="" class="mb-6 rounded-lg shadow-lg"/>
        <article class="prose mb-20">
                    <slot />
                </article>
            </div>
    </Main>
</html>
