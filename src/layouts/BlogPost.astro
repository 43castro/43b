---
import Nav from "../components/Nav.astro";
import TableOfContents from "../components/TableOfContents.astro";
const { frontmatter } = Astro.props;
import Main from "./Main.astro";
import "../styles/global.css"  
---

<html lang="es" class="scroll-smooth">
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
    <Main>
        <main
            class="overflow-hidden px-2 pb-72 pt-20">
            <div
                style="transform: translate(-280px, 175px);"
                class="fixed top-0 px-10">
                <TableOfContents/>
            </div>
            <div class="h-full w-full">
                <div class="flex justify-between">
                    <div>
                        <div class="mb-2 font-medium text-5xl">{frontmatter.title}</div>
                        <div class="mb-10 text-md font-extralight opacity-80">
                            <time datetime={frontmatter.date.toISOString()}
                                >{
                                    frontmatter.date.toLocaleDateString(
                                        undefined,
                                        {
                                            year: "numeric",
                                            month: "long",
                                            timeZone: "CET",
                                        },
                                    )
                                }</time
                            >
                        </div>
                    </div>
                </div>
                <img
                    src={frontmatter.image}
                    alt=""
                    class="mb-6 rounded-lg shadow-lg"
                />
                <main class="prose">
                    <slot />
                </main>
            </div>
        </main>
    </Main>
</html>

