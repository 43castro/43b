---
const { frontmatter } = Astro.props;
import Main from "./Main.astro";
import "../styles/global.css"  
---

<html lang="es" class="scroll-smooth">
    <Main title={frontmatter.title} description={frontmatter.description}>
        <main class="pb-72 pt-20">
            <div class="h-full w-full">
                <div class="flex justify-between">
                    <div>
                        <div class="mb-2 font-semibold text-4xl mx-2">{frontmatter.title}</div>
                        <div class="mb-10 text-md font-extralight opacity-80 mx-2">
                            <time datetime={frontmatter.pubDate.toISOString()}>
                            {frontmatter.pubDate.toLocaleDateString("es-ES",{
                                year: "numeric",
                                month: "long",
                                timeZone: "CET",})}</time>
                        </div>
                    </div>
                </div>
                <hr class="mb-8 mx-1.5">
                <img src={frontmatter.image} alt="" class="mb-6 rounded-lg shadow-lg"/>
                <article class="prose mx-2">
                    <slot />
                </article>
            </div>
    </Main>
</html>

