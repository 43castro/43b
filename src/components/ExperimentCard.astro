---
import type { CollectionEntry } from 'astro:content';
type Props = {
    experiments: CollectionEntry<"experiments">; 
};
const { experiments } = Astro.props;
const { title, pubDate } = experiments.data;
---

<div class="py-2 px-2  hover:rounded-lg hover:cursor-pointer text-xl flex justify-between">
        <a href={`/experiments/${experiments.slug}`} class="underline">{title}</a>
        <time class="opacity-75" datetime={pubDate.toISOString()}>{pubDate.toLocaleDateString(undefined, {
            month: "numeric",
            year: "numeric",
            timeZone: "CET",
        })}</time> 
    </div>
</div>

