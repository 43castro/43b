---
import type { CollectionEntry } from 'astro:content';
type Props = {
    blog: CollectionEntry<"blog">; 
};
const { blog } = Astro.props;
const { title, date } = blog.data;
---

<div class="py-2 px-2 hover:bg-neutral-800 hover:rounded-lg hover:cursor-pointer text-xl flex justify-between underline">
        <a href={`/blog/${blog.slug}`} class="">{title}</a>
        <time class="opacity-50" datetime={date.toISOString()}>{date.toLocaleDateString(undefined, {
            month: "numeric",
            year: "numeric",
            timeZone: "CET",
        })}</time>
    </div>
</div>


