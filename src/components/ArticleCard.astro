---
import type { CollectionEntry } from 'astro:content';
type Props = {
    blog: CollectionEntry<"blog">; 
};
const { blog } = Astro.props;
const { title, date } = blog.data;
---

<div id="card" class="bg-cover bg-center flex xl:1/3 lg:w-1/2 sm:w-full mx-auto mt-10 rounded-xl relative" style={{ backgroundImage: `url(${blog.data.image})`, backgroundSize: 'cover' }}>
    <div id="card-in" class="absolute justify-between flex w-full px-5 bottom-6 font-bold shadow-inner">
        <a href={`/blog/${blog.slug}`} class="text-2xl hover:underline underline-offset-4">{title}</a>
        <time class="font-extralight text-lg opacity-80" datetime={date.toISOString()}>{date.toLocaleDateString(undefined, {
            year: "numeric",
            month: "long",
            timeZone: "CET",
        })}</time>
    </div>
</div>


<style>
#card{
    height: 30rem;
    box-shadow: inset 0px -60px 200px #000000c4;
}  

</style>