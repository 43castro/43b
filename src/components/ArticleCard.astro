---
import type { CollectionEntry } from 'astro:content';
type Props = {
    blog: CollectionEntry<"blog">;
};
const { blog } = Astro.props;
const { title, pubDate } = blog.data;
---

<a href={`/blog/${blog.slug}`} class="text-black font-bold py-2.5 px-4 transition ease-in-out delay-50  hover:cursor-pointer text-xl flex w-fit gap-4">
    <time class="opacity-50 font-light" datetime={pubDate.toISOString()}>
      {`${pubDate.getFullYear()} Â· ${pubDate.getMonth() + 1}`}
    </time>
    <span class="opacity-80 hover:opacity-100">
      {title}
    </span>
</a>
