---
import type { CollectionEntry } from 'astro:content';
type Props = {
    blog: CollectionEntry<"blog">;
};
const { blog } = Astro.props;
const { title, pubDate } = blog.data;
---

<a href={`/blog/${blog.slug}`} class="py-2.5 px-4 transition ease-in-out delay-50 rounded-lg hover:bg-neutral-700 hover:cursor-pointer text-xl flex flex-col w-fit">{title}
    <time class="opacity-75 font-light text-base" datetime={pubDate.toISOString()}>
        {`${pubDate.getFullYear()} Â· ${pubDate.getMonth() + 1}`}
    </time>
</a>
